<div class="offset-md-4 col-12 col-md-4 text-center">
  <h1 class="">
    Login
  </h1>
  <%= form_tag '/login' do |form| %>
    <div class="mb-3">
      Email:
      <%= text_field_tag :email, "", class: 'form-control' %>
    </div>
    <div class="mb-3">
      Password:
      <%= password_field_tag :password, "", class: 'form-control' %><br>
    </div>
    <div class="mb-3">
      <%= submit_tag "Login", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
