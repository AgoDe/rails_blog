<div class="offset-md-4 col-12 col-md-4 text-center">
    <h1 class="mb-5">
        Registration
    </h1>

    <%= form_for @user do |form| %>

        <div class="mb-3">
            <%= form.label :username, class: 'form-label' %><br>
            <%= form.text_field :username, class: 'form-control' %>
            <% @user.errors.full_messages_for(:username).each do |message| %>
            <div class="form-text"><%= message %></div>
            <% end %>
        </div>

        <div class="mb-3">
            <%= form.label :email, class: 'form-label' %><br>
            <%= form.text_field :email, class: 'form-control' %>
            <% @user.errors.full_messages_for(:email).each do |message| %>
            <div class="form-text"><%= message %></div>
            <% end %>
        </div>

        <div class="mb-3">
            <%= form.label :password, class: 'form-label' %><br>
            <%= form.password_field :password, class: 'form-control' %><br>
            <% @user.errors.full_messages_for(:password).each do |message| %>
            <div class="form-text"><%= message %></div>
            <% end %>
        </div>

        <div class="mb-3">
            <%= form.submit class: 'btn btn-success' %>
        </div>
    <% end %>
</div>
