<%= turbo_frame_tag comment do %>
  <div class="card mb-2">
    <div class="card-body">
      <h5 class="card-title"><%= comment.title %></h5>
      <p class="card-text">
        <%= comment.body %>
      </p>
    </div>
    <div class="card-footer bg-transparent text-secondary fst-italic d-flex justify-content-between">
      <div>
        <%= comment.user.username %> - <%= comment.created_at.strftime('%d/%m/%Y  %H:%M') %>
      </div>
      <div class="d-flex">
        <%= link_to "Edit", edit_article_comment_path( @article.id, comment.id), class: "btn btn-success"  %>
        <%= button_to "Delete", article_comment_path(@article.id, comment.id), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
<% end %>
